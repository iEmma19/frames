  <script>
  
  // === Custom Cursor & Ghost Interaction ===
const cursor = document.querySelector('.custom-cursor');
const ghost = document.getElementById('ghost');

let mouseX = window.innerWidth / 2;
let mouseY = window.innerHeight / 2;

document.addEventListener('mousemove', (e) => {
  mouseX = e.clientX;
  mouseY = e.clientY;
  cursor.style.left = e.clientX - 15 + 'px';
  cursor.style.top = e.clientY - 15 + 'px';
});

// === THREE.js Scene ===
const canvas = document.getElementById('mirrorScene');
const scene = new THREE.Scene();
const camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 100);
const renderer = new THREE.WebGLRenderer({ canvas, alpha: true, antialias: true });
renderer.setSize(window.innerWidth, window.innerHeight);
renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
camera.position.z = 5;

// === Lights ===
const ambientLight = new THREE.AmbientLight(0x8888aa, 0.4);
scene.add(ambientLight);
const pointLight = new THREE.PointLight(0xaaffff, 1.5, 10);
pointLight.position.set(0, 2, 2);
scene.add(pointLight);

// === Mirror Plane with Reflector ===
import('https://cdn.jsdelivr.net/npm/three@0.164.0/examples/jsm/objects/Reflector.js')
  .then(({ Reflector }) => {
    const mirrorGeometry = new THREE.PlaneGeometry(6, 6);
    const mirror = new Reflector(mirrorGeometry, {
      clipBias: 0.003,
      textureWidth: window.innerWidth * window.devicePixelRatio,
      textureHeight: window.innerHeight * window.devicePixelRatio,
      color: 0x222233,
    });
    mirror.position.z = -1;
    scene.add(mirror);
  });

// === Distortion Effect (water shader plane) ===
const planeGeometry = new THREE.PlaneGeometry(10, 10, 256, 256);
const uniforms = {
  uTime: { value: 0 },
  uColor: { value: new THREE.Color(0x111122) }
};
const distortionMaterial = new THREE.ShaderMaterial({
  uniforms,
  vertexShader: `
    uniform float uTime;
    varying vec2 vUv;
    void main() {
      vUv = uv;
      vec3 pos = position;
      pos.z += sin(pos.x * 3.0 + uTime * 2.0) * 0.1;
      pos.z += cos(pos.y * 4.0 + uTime * 2.0) * 0.1;
      gl_Position = projectionMatrix * modelViewMatrix * vec4(pos, 1.0);
    }`,
  fragmentShader: `
    varying vec2 vUv;
    uniform vec3 uColor;
    void main() {
      float shade = smoothstep(0.2, 0.8, vUv.y);
      gl_FragColor = vec4(uColor * shade, 0.8);
    }`,
  transparent: true
});
const distortionPlane = new THREE.Mesh(planeGeometry, distortionMaterial);
distortionPlane.position.z = -1.01;
scene.add(distortionPlane);

// === Partículas flotantes ===
const particlesGeometry = new THREE.BufferGeometry();
const particlesCount = 150;
const posArray = new Float32Array(particlesCount * 3);
const velocities = new Float32Array(particlesCount * 3);

for (let i = 0; i < particlesCount * 3; i += 3) {
  posArray[i] = (Math.random() - 0.5) * 15;
  posArray[i + 1] = (Math.random() - 0.5) * 10;
  posArray[i + 2] = (Math.random() - 0.5) * 8;
  velocities[i] = (Math.random() - 0.5) * 0.01;
  velocities[i + 1] = (Math.random() - 0.5) * 0.01;
  velocities[i + 2] = (Math.random() - 0.5) * 0.005;
}

particlesGeometry.setAttribute('position', new THREE.BufferAttribute(posArray, 3));

const particlesMaterial = new THREE.PointsMaterial({
  size: 0.05,
  color: 0x77aaff,
  transparent: true,
  opacity: 0.6,
  blending: THREE.AdditiveBlending,
});

const particlesMesh = new THREE.Points(particlesGeometry, particlesMaterial);
scene.add(particlesMesh);

// === Postprocessing ===
import('https://cdn.jsdelivr.net/npm/three@0.164.0/examples/jsm/postprocessing/EffectComposer.js').then(async ({ EffectComposer }) => {
  const { RenderPass } = await import('https://cdn.jsdelivr.net/npm/three@0.164.0/examples/jsm/postprocessing/RenderPass.js');
  const { UnrealBloomPass } = await import('https://cdn.jsdelivr.net/npm/three@0.164.0/examples/jsm/postprocessing/UnrealBloomPass.js');
  const composer = new EffectComposer(renderer);
  composer.addPass(new RenderPass(scene, camera));

  const bloomPass = new UnrealBloomPass(new THREE.Vector2(window.innerWidth, window.innerHeight), 1.5, 0.4, 0.1);
  composer.addPass(bloomPass);

  // === Animación ===
  const clock = new THREE.Clock();
  function animate() {
    requestAnimationFrame(animate);

    // Partículas
    const positions = particlesGeometry.attributes.position.array;
    for (let i = 0; i < particlesCount * 3; i += 3) {
      positions[i] += velocities[i];
      positions[i + 1] += velocities[i + 1];
      positions[i + 2] += velocities[i + 2];
      if (Math.abs(positions[i]) > 8) velocities[i] *= -1;
      if (Math.abs(positions[i + 1]) > 8) velocities[i + 1] *= -1;
      if (Math.abs(positions[i + 2]) > 5) velocities[i + 2] *= -1;
    }
    particlesGeometry.attributes.position.needsUpdate = true;

    // Distorsión
    uniforms.uTime.value += clock.getDelta();

    // Rotación del conjunto
    particlesMesh.rotation.y += 0.001;

    composer.render();
  }
  animate();
});

// === Responsive ===
window.addEventListener('resize', () => {
  camera.aspect = window.innerWidth / window.innerHeight;
  camera.updateProjectionMatrix();
  renderer.setSize(window.innerWidth, window.innerHeight);
});

// Ocultar cursor del sistema
document.body.style.cursor = 'none';
</script>

<!-- Sparkle intro (similar cu sparkle.html) -->
<script src="https://unpkg.com/simplex-noise@2.4.0/simplex-noise.js"></script>
<script>
  (function(){
    const randomArrayValue = arr => arr[Math.floor(Math.random() * arr.length)];
    const w = window.innerWidth;
    const h = window.innerHeight;
    const numLayers = 4;
    const title = document.querySelector('.title');

    const ctxs = new Array(numLayers).fill(0).map((_, i) => {
      const canvas = document.createElement('canvas');
      canvas.width = w;
      canvas.height = h;
      canvas.className = 'sparkle-layer';
      canvas.style.setProperty('--layer', i * 10);
      document.body.appendChild(canvas);
      return canvas.getContext('2d');
    });

    const noiseLayers = new Array(ctxs.length).fill(0).map(() => new SimplexNoise());
    let phase = 0;
    let sparks = [];

    const reset = () => {
      title.classList.remove('go');
      setTimeout(() => title.classList.add('go'), 100);
      phase = 0;
      sparks = new Array(100).fill(0).map(() => {
        const ctx = randomArrayValue(ctxs);
        const depth = ctxs.indexOf(ctx) * 0.5;
        return {
          ctx,
          x: Math.random() * w,
          y: Math.random() * h,
          size: 2 + Math.random() + depth,
          life: 1,
          speed: 4 + 5 * Math.random() + depth,
          decay: 0.986 + 0.01 * Math.random(),
          noiseLayer: randomArrayValue(noiseLayers)
        };
      });
    };

    const clean = () => {
      ctxs.forEach(ctx => {
        ctx.clearRect(0, 0, ctx.canvas.width, ctx.canvas.height);
        ctx.globalCompositeOperation = 'lighter';
      });
    };

    const update = (spark) => {
      const scale = 0.001;
      const noise = spark.noiseLayer.noise3D(spark.x * scale, spark.y * scale, phase);
      const angle = noise * Math.PI * 2;
      spark.life *= spark.decay;
      spark.x += Math.cos(angle) * spark.speed;
      spark.y += Math.sin(angle) * spark.speed * 0.5;
      spark.speed *= spark.decay;
      if (spark.x < 0 || spark.x > w || spark.y < 0 || spark.y > h) {
        spark.x = Math.random() * w;
        spark.y = Math.random() * h;
        spark.life = 1;
      }
    };

    const draw = ({ ctx, x, y, size, life }) => {
      const r = 255;
      const g = 180 + Math.random() * 70;
      const b = 0;
      ctx.beginPath();
      ctx.fillStyle = `rgba(${r},${g},${b},${life})`;
      ctx.arc(x, y, size, 0, Math.PI * 2);
      ctx.fill();
    };

    const tick = () => {
      phase += 0.01;
      sparks.forEach(spark => { update(spark); draw(spark); });
    };

    const loop = () => { clean(); tick(); requestAnimationFrame(loop); };
    reset();
    loop();

    // După 8s: ascunde canvasele sparkle
    setTimeout(() => {
      document.querySelectorAll('canvas.sparkle-layer').forEach(el => el.style.display = 'none');
    }, 8000);
  })();
</script>

<!-- Player YouTube ascuns pentru muzică de fundal -->
<div id="yt-player" style="position:fixed; left:-9999px; top:-9999px; width:0; height:0; opacity:0; pointer-events:none;"></div>
<script src="https://www.youtube.com/iframe_api"></script>
<script>
  (function(){
    const params = new URLSearchParams(window.location.search);
    window.__YT_VIDEO_ID__ = params.get('yt') || 'RLhGNtbW6Z4';
    window.__YT_LIST_ID__ = params.get('ytlist') || params.get('list') || 'RDRLhGNtbW6Z4';
  })();
  let ytPlayer;
  function onYouTubeIframeAPIReady() {
    ytPlayer = new YT.Player('yt-player', {
      videoId: window.__YT_VIDEO_ID__,
      playerVars: { autoplay: 1, controls: 0, modestbranding: 1, rel: 0, loop: 1, playlist: window.__YT_LIST_ID__ },
      events: { onReady: function(e){ e.target.mute(); e.target.playVideo(); } }
    });
  }
  function unmuteOnce(){
    try{ ytPlayer && ytPlayer.unMute && ytPlayer.unMute(); }catch(_){}
    document.removeEventListener('click', unmuteOnce);
    document.removeEventListener('touchstart', unmuteOnce);
    document.removeEventListener('keydown', unmuteOnce);
  }
  document.addEventListener('click', unmuteOnce, { once: true });
  document.addEventListener('touchstart', unmuteOnce, { once: true, passive: true });
  document.addEventListener('keydown', unmuteOnce, { once: true });
</script>

<!-- Text 3D și rotire cu efecte (ca în sparkle.html) -->
<script>
  (function(){
    let words = [
      "Live and Die Brave",
      "Be Happy, Life is Short.",
      "Trust Few, Fear None",
      "Stay Humble, Stay Strong"
    ];
    let rotationMs = 4000;
    let shimmerOn = true;
    let wordColors = ["#ff3b3b", "#ffaa00", "#67ff7b", "#7aa0ff", "#ff6ad5"];

    function createContainerWithWord(word, color) {
      const container = document.createElement('div');
      container.className = 'number-container';
      const mask = document.createElement('div');
      mask.className = 'mask-number';
      const span = document.createElement('span');
      span.textContent = word;
      if (shimmerOn) span.classList.add('shimmer');
      if (color) mask.style.setProperty('--accent-color', color);
      mask.appendChild(span);
      container.appendChild(mask);
      return container;
    }

    function startTextRotation() {
      const t3d = document.getElementById('text3d');
      if (!t3d) return;
      const scene = t3d.querySelector('.scene');
      if (!scene) return;
      let idx = 0;
      function update(){
        const old = scene.querySelector('.number-container');
        if (old) old.remove();
        const color = (wordColors && wordColors.length) ? wordColors[idx % wordColors.length] : null;
        scene.appendChild(createContainerWithWord(words[idx], color));
        idx = (idx + 1) % words.length;
      }
      update();
      if (window.textRotationInterval) clearInterval(window.textRotationInterval);
      window.textRotationInterval = setInterval(update, rotationMs);
    }

    // Tranziție: după 9s ascunde titlul și arată textul 3D
    setTimeout(() => {
      const titleEl = document.querySelector('.title');
      if (titleEl) titleEl.style.display = 'none';
      const t3d = document.getElementById('text3d');
      if (t3d) {
        t3d.style.display = 'grid';
        startTextRotation();
      }
    }, 9000);
  })();
</script>


</body></html>
